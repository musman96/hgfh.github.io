@model HGFH.Models.IndexViewModel
@{
    ViewData["Title"] = "Bushbuckridge";
}
<section id="home" class="video-hero js-fullheight" style="height: 700px;background-image: url(../images/alter4.jpg);background-size: cover;background-position: center center;
    background-attachment: fixed;" data-section="home">
    <div class="overlay js-fullheight"></div>
    <div class="container">
        <div class="row no-gutters slider-text js-fullheight align-items-center justify-content-center" data-scrollax-parent="true">
            <div class="col-md-10 ftco-animate text-center" data-scrollax=" properties: { translateY: '70%' }">
                <p class="breadcrumbs mb-2" data-scrollax="properties: { translateY: '30%', opacity: 1.6 }"><span class="mr-2"><a asp-controller="Home" asp-action="Index">Home</a></span> <span>Branches</span></p>
                <h1 class="mb-3 mt-0 bread" data-scrollax="properties: { translateY: '30%', opacity: 1.6 }">Bushbuckridge</h1>
            </div>
        </div>
    </div>
</section>

<section class="ftco-bible-study">
    <div class="container-wrap">
        <div class="col-md-12 wrap">
            <div class="container">
                <div class="row">
                    <div class="col-md-12 d-md-flex">
                        <div class="one-half ftco-animate" style="text-align:center;">
                            <h3> @DateTime.Now.Year Declaration</h3>
                            <p>@Model.YearlyDeclarationBlog.Title</p>
                            <div class="button" style="position:relative; margin:auto;">
                                <p><a asp-controller="Blogs" asp-action="Details" asp-route-id="@Model.YearlyDeclarationBlog.Id" class="btn btn-primary p-3">More Details</a></p>
                            </div>
                        </div>
                        <div class="one-half ftco-animate" style="text-align:center;">
                            <h3>Declaration of the month</h3>
                            <p>@Model.MonthylDeclarationBlog.Title</p>
                            <div class="button" style="position:relative; margin:auto;">
                                <p><a asp-controller="Blogs" asp-action="Details" asp-route-id="@Model.MonthylDeclarationBlog.Id" class="btn btn-primary p-3">More Details</a></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="ftco-section-2">
    <div class="container-fluid">
        <div class="section-2-blocks-wrapper d-flex row no-gutters">
            <div class="img col-md-6 ftco-animate" style="background-image: url('../images/bushbuckridge.jpg');">
                <a href="https://www.youtube.com/watch?v=jFRYqNKbnoE" class="button popup-vimeo"><span class="ion-ios-play"></span></a>
            </div>
            <div class="text col-md-6 ftco-animate">
                <div class="text-inner align-self-start">

                    <h3>Holy Ghost Fire House Pretoria</h3>
                    <p>pastored by Pastor Josh, overseen by bishop alex</p>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="ftco-section ftco-counter" id="section-counter">
    <div class="container">
        <div class="row justify-content-center mb-5 pb-5">
            <div class="col-md-7 text-center heading-section ftco-animate">
                <h2>Branch Details</h2>
                <p>Find out more about Holy Ghost Fire House Pretoria</p>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-8 d-flex justify-content-center counter-wrap ftco-animate">
                <div class="block-18 text-center">
                    <div class="text">
                        <h3 class="mb-2">Our Location</h3>
                        <p class="mb-4"><span> 12 Samora Machel Drive Nelspruit, Mbombela</span></p>
                        <a href="#" class="img mb-4" style="background-image: url(images/event-1.jpg);"><iframe width="500" height="300" style="border:0" loading="lazy" allowfullscreen src="https://www.google.com/maps/embed/v1/place?q=place_id:ChIJFcP1owNK6B4REAizNntWTj0&key=AIzaSyCHsx_48eD4y3JPgrRoFDd0jq4UbOzQThg"></iframe></a>
                        @*<p>A small river named Duden flows by their place and supplies it with the necessary regelialia.</p>*@
                    </div>
                </div>
            </div>
            <div class="col-lg-4 d-flex justify-content-center counter-wrap ftco-animate">
                <div class="block-18 text-center">
                    <div class="text">
                        <strong class="fadeInLeft">Services</strong>
                        <ul class="list-unstyled">
                            <li class="py-2 d-block">Power Thursday Service &#64;18:00</li>
                            <li class="py-2 d-block">Sunday Celebration Service &#64; 09:00</li>
                        </ul>
                    </div>
                    <div class="text">
                        <strong class="fadeInLeft">Social Media</strong>
                        <ul class="list-unstyled">
                            <li class="ftco-animate"><a href="https://www.instagram.com/hgfh_sa"><span class="icon-instagram"></span></a></li>
                            <li class="ftco-animate"><a href="https://facebook.com/Holyghostfirehouse.sa"><span class="icon-facebook"></span></a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>