@model HGFH.Data.Sermon

@{
    ViewData["Title"] = "Create";
}

<section id="home" class="video-hero js-fullheight" style="height: 700px; background-image: url('../images/alter4.jpg');  background-size:cover; background-position: center center;background-attachment:fixed;" data-section="home">
    <div class="overlay js-fullheight"></div>
    <div class="container">
        <div class="row no-gutters slider-text js-fullheight align-items-center justify-content-center" data-scrollax-parent="true">
            <div class="col-md-10 ftco-animate text-center" data-scrollax=" properties: { translateY: '70%' }">
                <p class="breadcrumbs mb-2" data-scrollax="properties: { translateY: '30%', opacity: 1.6 }"><span class="mr-2"><a asp-controller="Sermons" asp-action="Index">Sermons</a></span> <span>Edit</span></p>
                <h1 class="mb-3 mt-0 bread" data-scrollax="properties: { translateY: '30%', opacity: 1.6 }">Sermon</h1>
            </div>
        </div>
    </div>
</section>
<section class="ftco-section contact-section ftco-degree-bg">
    <div class="container bg-light">
        <div class="row">
            <div class="col-lg-8" style="margin: auto; position:relative;">
                <h4>New Blog</h4>
                <form asp-action="Create" enctype="multipart/form-data" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <label asp-for="Title" class="control-label"></label>
                        <input asp-for="Title" class="form-control" required />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Subtitle" class="control-label"></label>
                        <input asp-for="Subtitle" class="form-control" required />
                        <span asp-validation-for="Subtitle" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Preacher" class="control-label"></label>
                        <input asp-for="Preacher" class="form-control" required />
                        <span asp-validation-for="Preacher" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="YoutubeLink" class="control-label"></label>
                        <input asp-for="YoutubeLink" class="form-control" required />
                        <span asp-validation-for="YoutubeLink" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Thumbnail</label>
                        <input type="file" value="Select Thumbnail" name="thumbnail" title="File" class="col-md-offset-1" id="thumbnail" />
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary py-3 px-5" />
                        <a asp-action="Index" class="btn btn-primary py-3">Back to List</a>
                    </div>
                </form>
            </div>
            <div>
                <a asp-action="Index">Back to List</a>
            </div>
        </div>
    </div>
</section>